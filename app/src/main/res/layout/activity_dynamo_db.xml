<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.awsex.DynamoDb.dynamo_db">

    <EditText
        android:id="@+id/BookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Book Name..."
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Ratings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BookName"
        android:layout_alignStart="@+id/BookName"
        android:layout_below="@+id/BookName"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Ratings"
        android:inputType="textPersonName|numberDecimal" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:text="Submit" />

    <Button
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit"
        android:layout_alignEnd="@+id/submit"
        android:layout_alignRight="@+id/submit"
        android:layout_marginBottom="31dp"
        android:text="List" />

    <EditText
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/BookName"
        android:layout_alignLeft="@+id/BookName"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/BookName"
        android:layout_alignStart="@+id/BookName"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Table Title"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/retrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/submit"
        android:layout_marginBottom="33dp"
        android:text="retrieve" />

    <Button
        android:id="@+id/bow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/submit"
        android:layout_toRightOf="@+id/submit"
        android:text="Button" />
</RelativeLayout>
